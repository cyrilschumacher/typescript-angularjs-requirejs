{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["dom", "es5"],
    "moduleResolution": "node",
    "outDir": "dist/javascript",
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": ["angular", "angular-route", "jquery", "requirejs"]
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "bower_components",
    "dist",
    "node_modules",
    "test"
  ]
}
